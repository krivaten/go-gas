{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "strict": false,
        "noEmit": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "lib": ["dom", "es7"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": ["src/**/*"]
}
